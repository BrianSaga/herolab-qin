		<fieldval field="maPrep" value="One round"/>
		<fieldval field="maPrepST" value="N/A"/>
		<fieldval field="maDur" value="One day"/>
		<fieldval field="maArea" value="A radius of (Wood) yards around the pictogram, plus any additional distance deriving from an additional investment of Chi"/>
