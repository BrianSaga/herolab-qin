		<fieldval field="maPrep" value="One small hour"/>
		<fieldval field="maPrepST" value="N/A"/>
		<fieldval field="maDur" value="One day"/>
		<fieldval field="maArea" value="Anything reflected in the mirror"/>
		<fieldval field="chiCost" value="4"/>
